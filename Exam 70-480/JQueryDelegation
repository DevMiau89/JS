<body>

    <h1>My First Heading</h1>
    
    <form action="#" style="max-width: 40%;">
       <fieldset>
           <legend>Test form</legend>
           <input type="checkbox" name="chk" id="chk" /> 
           <label for="chk">Click to show/hide</label>
           <br/>
           <label class="hidden">Name:</label><input type="text" name="name" class="hidden" />
           <label class="hidden">Email:</label><input type="email" name="email" class="hidden" />
        </fieldset> 
    </form>
    
    <script>
        const chk = document.querySelector('#chk');
        
        function showHide(){
            let inputs = document.querySelectorAll('.hidden');
            let arrayInputs = Array.from(inputs, el => (chk.checked) ? el.style.display = "inline" : el.style.display = "none");                       
        };
        
        chk.addEventListener('click', showHide);
    </script>
